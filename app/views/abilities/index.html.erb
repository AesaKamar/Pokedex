<h1>Listing abilities</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @abilities.each do |ability| %>
      <tr>
        <td><%= ability.id %></td>
        <td><%= ability.name %></td>
        <td><%= ability.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
